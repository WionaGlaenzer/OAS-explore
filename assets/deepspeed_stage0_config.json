{
    "fp16": {
      "enabled": true
    },
    "optimizer": {
      "type": "AdamW",
      "params": {
        "lr": "auto"
      }
    },
    "scheduler": {
      "type": "WarmupLR",
      "params": {
        "warmup_min_lr": "auto",
        "warmup_max_lr": "auto",
        "warmup_num_steps": "auto"
      }
    },
    "zero_optimization": {
     "stage": 3,
     "offload_param": {
         "device": "cpu",
         "pin_memory": true
     },
     "offload_optimizer": {
        "device": "cpu",
        "pin_memory": true
     },
    "contiguous_gradients": false,
    "overlap_comm": true
  },
  
    "gradient_accumulation_steps": "auto",
    "train_batch_size": "auto",
    "train_micro_batch_size_per_gpu": "auto",
    "wall_clock_breakdown": false
}